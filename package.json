  "description": "Boilerplate Sveltekit NodeJs MongoDB",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm --prefix ./frontend run dev\" \"npm --prefix ./backend run dev\" \"start cmd.exe /K .\\utils\\mail\\start-mailhog.bat\"",
