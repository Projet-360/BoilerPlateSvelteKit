{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "dev": "concurrently \"npm run dev:node\" \"npm run prettier:watch\"",
    "dev:node": "cross-env NODE_ENV=dev nodemon --watch \"**/*.ts\" --exec 'node --loader ts-node/esm index.ts'",
    "cleardb": "node --loader ts-node/esm ./services/clear-db.ts",
    "docs": "typedoc --out docs",
    "format": "prettier --write \"./**/*.ts\"",
    "lint": "eslint \"./**/*.ts\"",
    "prettier:watch": "onchange \"./**/*.ts\" -- prettier --write \"./**/*.ts\" > nul 2>&1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
