{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "dev": "concurrently \"npm run dev:node\" \"npm run prettier:watch\"",
    "dev:node": "cross-env NODE_ENV=dev nodemon --watch \\\"**/*.ts\\\" --exec 'node --loader ts-node/esm' ./index.ts",
    "cleardb": "ts-node --esm clear-db.ts",
    "docs": "typedoc --out docs",
    "format": "prettier --write \"./**/*.ts\"",
    "lint": "eslint \"./**/*.ts\"",
    "prettier:watch": "onchange \"./**/*.ts\" -- prettier --write \"./**/*.ts\" > nul 2>&1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/mongodb": "^4.0.7",
    "@types/redis": "^4.0.11",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.0.1",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "nodemailer": "^6.9.5",
    "redis": "^4.6.10",
    "socket.io": "^4.7.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.5",
    "@types/cookie-parser": "^1.4.5",
    "@types/cors": "^2.8.15",
