    "jsonwebtoken": "latest",
    "mongoose": "latest",
    "nodemailer": "latest",
    "redis": "latest",
    "socket.io": "latest",
    "ua-parser-js": "latest",
    "winston": "latest"
  },
  "devDependencies": {
    "@types/bcryptjs": "latest",
