{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["./*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./../Types"],
    "noEmit": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./**/*.ts",
    "./../**/*.d.ts"
  ]
}
